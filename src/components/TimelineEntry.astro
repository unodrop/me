---
/**
 * TimelineEntry Component
 * 
 * Displays a single entry in a journey/career timeline with visual indicators, metadata,
 * and optional expandable content. Features a vertical timeline design with color-coded
 * dots and type badges to distinguish between milestones, learning experiences, and transitions.
 * 
 * Each entry can include:
 * - Date and type indicator
 * - Title and description
 * - Skills/technologies list
 * - Expandable detailed content (via slot)
 * 
 * @component
 * 
 * @slot default - Optional detailed content shown when expanded (supports markdown/prose)
 * 
 * @example
 * ```astro
 * <!-- Simple timeline entry without expandable content -->
 * <TimelineEntry
 *   date={new Date('2024-01-15')}
 *   title="Launched New Product"
 *   type="milestone"
 *   description="Successfully launched the redesigned platform to 10k users"
 *   skills={['React', 'TypeScript', 'AWS']}
 * />
 * 
 * <!-- Timeline entry with expandable content -->
 * <TimelineEntry
 *   date={new Date('2023-06-01')}
 *   title="Joined Tech Company"
 *   type="transition"
 *   description="Started as Senior Frontend Developer"
 *   skills={['Vue.js', 'Node.js']}
 *   hasContent={true}
 * >
 *   <p>Detailed information about the role and achievements...</p>
 * </TimelineEntry>
 * ```
 */

interface Props {
  /** Date of the timeline event (formatted as "Month Year") */
  date: Date;
  
  /** Title/heading of the timeline entry */
  title: string;
  
  /** Type of entry (determines color coding and badge label) */
  type: 'milestone' | 'learning' | 'transition';
  
  /** Brief description of the event or achievement */
  description: string;
  
  /** Optional array of skills or technologies associated with this entry */
  skills?: string[];
  
  /** Whether this entry has expandable content in the slot (default: false) */
  hasContent?: boolean;
}

const { date, title, type, description, skills, hasContent = false } = Astro.props;

/**
 * Formats the date to show month and year only
 * 
 * Uses US English locale with long month format.
 * Example output: "January 2024"
 */
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long'
}).format(date);

/**
 * Human-readable labels for timeline entry types
 * 
 * Maps internal type values to display labels shown in the badge.
 * Each type has a distinct color in the UI:
 * - milestone: accent color (achievements, launches)
 * - learning: green (education, skill development)
 * - transition: orange (job changes, career moves)
 */
const typeLabels = {
  milestone: 'Milestone',
  learning: 'Learning',
  transition: 'Transition'
};

/**
 * Generates a unique ID for ARIA accessibility
 * 
 * Uses timestamp to ensure uniqueness for expand/collapse functionality.
 */
const entryId = `journey-${date.getTime()}`;
---

<article class="timeline-entry">
  <div class="timeline-marker">
    <div class="timeline-dot" data-type={type}></div>
    <div class="timeline-line"></div>
  </div>
  
  <div class="timeline-content">
    <div class="timeline-header">
      <time class="timeline-date" datetime={date.toISOString()}>
        {formattedDate}
      </time>
      <span class="timeline-type" data-type={type}>
        {typeLabels[type]}
      </span>
    </div>
    
    <h3 class="timeline-title">{title}</h3>
    
    <p class="timeline-description">{description}</p>
    
    {skills && skills.length > 0 && (
      <div class="timeline-skills">
        <span class="skills-label">Skills:</span>
        <ul class="skills-list">
          {skills.map((skill) => (
            <li class="skill-tag">{skill}</li>
          ))}
        </ul>
      </div>
    )}

    {hasContent && (
      <>
        <button 
          class="expand-toggle" 
          aria-expanded="false" 
          aria-controls={entryId}
          type="button"
        >
          <span class="expand-text">Read more</span>
          <svg class="expand-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </button>
        
        <div id={entryId} class="timeline-body" aria-hidden="true">
          <div class="timeline-body-content prose">
            <slot />
          </div>
        </div>
      </>
    )}
  </div>
</article>

<style>

  .timeline-entry {
    display: grid;
    grid-template-columns: 2rem 1fr;
    gap: 1.5rem;
    position: relative;
  }

  .timeline-entry:last-child .timeline-line {
    display: none;
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .timeline-dot {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: var(--color-accent);
    border: 3px solid var(--color-bg);
    position: relative;
    z-index: 2;
    flex-shrink: 0;
  }

  .timeline-dot[data-type="milestone"] {
    background: var(--color-accent);
  }

  .timeline-dot[data-type="learning"] {
    background: #10b981;
  }

  .timeline-dot[data-type="transition"] {
    background: #f59e0b;
  }

  .timeline-line {
    width: 2px;
    flex-grow: 1;
    background: var(--color-border);
    margin-top: 0.5rem;
  }

  .timeline-content {
    padding-bottom: 3rem;
  }

  .timeline-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .timeline-date {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .timeline-type {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
  }

  .timeline-type[data-type="milestone"] {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .timeline-type[data-type="learning"] {
    color: #10b981;
    border-color: #10b981;
  }

  .timeline-type[data-type="transition"] {
    color: #f59e0b;
    border-color: #f59e0b;
  }

  .timeline-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-text);
    line-height: 1.25;
  }

  .timeline-description {
    font-size: 1rem;
    line-height: 1.75;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .timeline-skills {
    margin-top: 1rem;
  }

  .skills-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    display: block;
    margin-bottom: 0.5rem;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skill-tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    color: var(--color-text-secondary);
    font-weight: 500;
    flex-grow: 0;
    flex-shrink: 0;
  }

  .expand-toggle {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    margin-top: 1rem;
    padding: 0.5rem 0;
    background: none;
    border: none;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .expand-toggle:hover {
    opacity: 0.8;
  }

  .expand-icon {
    transition: transform 0.2s ease;
  }

  .expand-toggle[aria-expanded="true"] .expand-icon {
    transform: rotate(180deg);
  }

  .expand-toggle[aria-expanded="true"] .expand-text::before {
    content: "Show less";
  }

  .expand-toggle[aria-expanded="true"] .expand-text {
    font-size: 0;
  }

  .expand-toggle[aria-expanded="true"] .expand-text::before {
    font-size: 0.875rem;
  }

  .timeline-body {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s ease;
    overflow: hidden;
  }

  .timeline-body[aria-hidden="false"] {
    grid-template-rows: 1fr;
  }

  .timeline-body-content {
    min-height: 0;
    overflow: hidden;
  }

  .timeline-body-content.prose {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    margin-top: 1rem;
  }

  .timeline-body-content.prose :global(h2) {
    font-size: 1.125rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .timeline-body-content.prose :global(h2:first-child) {
    margin-top: 0;
  }

  .timeline-body-content.prose :global(p) {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }

  .timeline-body-content.prose :global(ul),
  .timeline-body-content.prose :global(ol) {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .timeline-body-content.prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .timeline-body-content.prose :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .timeline-entry {
      grid-template-columns: 1.5rem 1fr;
      gap: 1rem;
    }

    .timeline-dot {
      width: 0.75rem;
      height: 0.75rem;
      border-width: 2px;
    }

    .timeline-title {
      font-size: 1.125rem;
    }

    .timeline-description {
      font-size: 0.875rem;
    }

    .timeline-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>

<script>
  function initExpandToggles() {
    const toggles = document.querySelectorAll('.expand-toggle');
    
    toggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        const targetId = toggle.getAttribute('aria-controls');
        const target = document.getElementById(targetId!);
        
        if (target) {
          toggle.setAttribute('aria-expanded', String(!expanded));
          target.setAttribute('aria-hidden', String(expanded));
        }
      });
    });
  }

  // Initialize on page load
  initExpandToggles();

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:after-swap', initExpandToggles);
</script>

---
/**
 * OptimizedImage Component
 * 
 * A wrapper around Astro's built-in Image component that provides
 * automatic image optimization with sensible defaults.
 * 
 * Features:
 * - Automatic format conversion (WebP/AVIF)
 * - Responsive image generation
 * - Lazy loading by default
 * - Width/height for layout stability
 * 
 * Usage:
 * ```astro
 * import OptimizedImage from '@/components/OptimizedImage.astro';
 * import myImage from '@/assets/my-image.jpg';
 * 
 * <OptimizedImage 
 *   src={myImage} 
 *   alt="Description" 
 *   width={800}
 *   height={600}
 * />
 * ```
 */

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  quality?: number;
  format?: 'avif' | 'webp' | 'png' | 'jpg';
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  class: className,
  quality = 80,
  format = 'webp',
} = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  class={className}
  quality={quality}
  format={format}
/>
